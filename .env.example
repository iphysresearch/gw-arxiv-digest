# GW arXiv Digest Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# MATTERMOST INTEGRATION (Optional)
# =============================================================================
# Your Mattermost incoming webhook URL for notifications
# Get this from: Mattermost > Integrations > Incoming Webhooks
MATTERMOST_WEBHOOK_URL=https://your-mattermost-server.com/hooks/your-webhook-id

# Maximum number of papers to include in Mattermost digest
# Recommended: 50-100 to avoid message length limits
MATTERMOST_MAX_PAPERS=100

# =============================================================================
# ARXIV CRAWLING CONFIGURATION
# =============================================================================
# Maximum results per arXiv category query
# Recommended: 300 to ensure complete coverage
ARXIV_MAX_RESULTS=300

# =============================================================================
# ARCHIVE SETTINGS
# =============================================================================
# Enable local JSON archiving (recommended: true)
ENABLE_ARCHIVE=true

# Archive directory for complete paper data
# Default: archives/complete (relative to project root)
ARCHIVE_DIR=archives/complete

# =============================================================================
# ADVANCED OPTIONS (Optional)
# =============================================================================
# Enable debug logging (true/false)
# DEBUG=false

# Custom user agent for web requests (leave default unless needed)
# USER_AGENT=GW-arXiv-Digest/1.0

# Request timeout in seconds
# REQUEST_TIMEOUT=30

# =============================================================================
# USAGE EXAMPLES
# =============================================================================
# 
# Minimal setup (no Mattermost):
#   ENABLE_ARCHIVE=true
#   ARXIV_MAX_RESULTS=300
#
# Complete setup with Mattermost:
#   MATTERMOST_WEBHOOK_URL=https://your-server.com/hooks/abc123
#   MATTERMOST_MAX_PAPERS=75
#   ENABLE_ARCHIVE=true
#   ARXIV_MAX_RESULTS=300
#
# Testing setup:
#   ENABLE_ARCHIVE=true
#   ARXIV_MAX_RESULTS=50
#   DEBUG=true
